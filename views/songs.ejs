    document.addEventListener('DOMContentLoaded', () => {
    const audioElements = document.querySelectorAll('.custom-audio');

    audioElements.forEach(audio => {
        let intervalId; // Variable to store interval ID

        audio.addEventListener('play', async (e) => {
            const parentLi = e.target.closest('li');
            const songId = parentLi.getAttribute('data-song-id');
            
            // Clear any existing interval
            if (intervalId) {
                clearInterval(intervalId);
            }

            // Set a new interval
            intervalId = setInterval(async () => {
                const status = audio.paused ? 'paused' : 'playing';

                try {
                    await fetch('/api/current-playing', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ songId, status }),
                    });
                } catch (error) {
                    console.error('Error updating current playing song:', error);
                }
            }, 1000);
        });

        // Clear the interval when audio is paused or ended
        audio.addEventListener('pause', () => {
            clearInterval(intervalId);
            // Update the status when paused
            fetch('/api/current-playing', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ songId: audio.closest('li').getAttribute('data-song-id'), status: 'paused' }),
            });
        });

        audio.addEventListener('ended', () => {
            clearInterval(intervalId);
            // Update the status when ended
            fetch('/api/current-playing', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ songId: audio.closest('li').getAttribute('data-song-id'), status: 'ended' }),
            });
        });
    });
