<!DOCTYPE html>
<html>
<head>
  <title>Signup Form</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    .form-group {
      margin-bottom: 15px;
    }
    .hidden {
      display: none;
    }
  </style>
</head>
<body>
  <div class="form-container">
  <form action="/signup" method="POST">
    <h2>SignUp</h2>
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" id="name" name="username" placeholder="Enter your name" required autocomplete="off">
    </div>

    <div class="form-group">
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" placeholder="Enter your password" required>
    </div>

    <div class="form-group">
      <label for="isArtist">Do you want to be an artist?</label>
      <input type="checkbox" id="isArtist" name="isArtist" onchange="toggleArtistFields()">
    </div>

    <div id="artistFields" class="hidden">
      <div class="form-group">
        <label for="artistName">Artist Name:</label>
        <input type="text" id="artistName" name="artistName" placeholder="Enter your artist name" autocomplete="off">
      </div>

      <div class="form-group">
        <label for="artistPassword">Artist Password:</label>
        <input type="password" id="artistPassword" name="artistPassword" placeholder="Enter your artist password">
      </div>
    </div>
    <button type="submit" class="submit-btn">Submit</button>
  </form>
</div>

  <script>
    function conditions(){
      const name=document.getElementById('name');
      if(name.length<2){
        alert("name must be atleast 3 characters");
        return false;

      }
      return true;
      
    }
    function toggleArtistFields() {
      const isArtist = document.getElementById('isArtist').checked;
      const artistFields = document.getElementById('artistFields');
      if (isArtist) {
        artistFields.classList.remove('hidden');
      } else {
        artistFields.classList.add('hidden');
      }
    }
  </script>
</body>
</html>
